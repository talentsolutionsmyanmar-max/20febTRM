          className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4"
        >
          {jobs.map((job) => (
            <motion.div key={job.id} variants={itemVariants}>
              <Card className="glass-card-hover h-full group">
                <CardContent className="p-5">
                  {/* Job Header */}

  'action.search': { en: 'Search', my: 'á€›á€¾á€¬á€–á€½á€±á€•á€«' },
  'action.filter': { en: 'Filter', my: 'á€…á€…á€ºá€‘á€¯á€á€ºá€•á€«' },

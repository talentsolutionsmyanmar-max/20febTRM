  'action.download': { en: 'Download', my: 'á€’á€±á€«á€„á€ºá€¸á€œá€¯á€’á€ºá€†á€½á€²á€•á€«' },
  'action.share': { en: 'Share', my: 'á€™á€»á€¾á€á€±á€•á€«' },
  'action.copy': { en: 'Copy', my: 'á€€á€°á€¸á€šá€°á€•á€«' },
  'action.close': { en: 'Close', my: 'á€•á€­á€á€ºá€•á€«' },

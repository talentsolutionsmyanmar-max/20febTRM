      try {
        const response = await fetch('/api/stats');
        const data = await response.json();
        
        if (data.success) {
          setStats([
            { icon: Briefcase, value: `${data.stats.jobs}+`, label: 'Open Positions', labelMm: 'á€¡á€œá€¯á€•á€ºá€”á€±á€›á€¬á€™á€»á€¬á€¸' },

      experience: 'Experience',
      education: 'Education',
      appliedRole: 'Applied Role',
      appliedDate: 'Applied Date',
      matchScore: 'Match Score',
      status: 'Status',
      actions: 'Actions',
      shortlist: 'Shortlist',
      reject: 'Reject',
      schedule: 'Schedule Interview',
      notes: 'Notes',
      addNote: 'Add a note...',
      export: 'Export',
      refresh: 'Refresh',
    },
    my: {
      title: '·ÄÄ·Ä≠·ÄÖ·Äπ·ÄÖ·Äú·ÄÄ·Ä∫·ÄÅ·Ä∂·Äû·Ä∞·Äô·Äª·Ä¨·Ä∏ ·ÄÖ·Ä≠·ÄÖ·ÄÖ·Ä∫·ÄÅ·Äº·ÄÑ·Ä∫·Ä∏',
      subtitle: '·Ä°·Äú·ÄØ·Äï·Ä∫·Äú·Äª·Äæ·Ä±·Ä¨·ÄÄ·Ä∫·Äú·ÄΩ·Äæ·Ä¨·Äê·ÄÑ·Ä∫·Äû·Ä∞·Äô·Äª·Ä¨·Ä∏·ÄÄ·Ä≠·ÄØ ·ÄÖ·Ä≠·ÄÖ·ÄÖ·Ä∫·Åç ·ÄÖ·ÄÆ·Äô·Ä∂·Äï·Ä´',
      search: '·ÄÄ·Ä≠·ÄÖ·Äπ·ÄÖ·Äú·ÄÄ·Ä∫·ÄÅ·Ä∂·Äû·Ä∞·Äô·Äª·Ä¨·Ä∏ ·Äõ·Äæ·Ä¨·Äñ·ÄΩ·Ä±·Äï·Ä´...',
